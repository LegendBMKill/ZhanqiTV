<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginRight="12dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <com.jason.zhanqitv.widget.RoundImageView
        android:id="@+id/item_thumb"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        tools:src="@drawable/zq_launch_image"/>

    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_thumb"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_dark"
        android:textSize="@dimen/sp_14"
        tools:text="蔬菜生：盲僧一脚五杀，无人能档，进来瞅瞅！"/>


    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_gray_6"
        android:textSize="@dimen/sp_12"
        tools:text="gogoing"/>
    <TextView
        android:id="@+id/item_persons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/color_gray_6"
        android:textSize="@dimen/sp_12"
        tools:text="81.2万"/>

</RelativeLayout>